{
  "_comment": "MCP Server Configuration - Edit paths for your system",
  "_install_instructions": {
    "pomera": "npm install -g pomera-ai-commander",
    "text-editor": "pip install uv && uvx mcp-text-editor",
    "sequential-thinking": "npm install -g @modelcontextprotocol/server-sequential-thinking",
    "context7": "No installation needed - HTTP endpoint"
  },
  "mcpServers": {
    "pomera": {
      "timeout": 60,
      "type": "stdio",
      "command": "pomera",
      "args": [
        "--mcp-server"
      ],
      "_setup": "Install: npm install -g pomera-ai-commander"
    },
    "text-editor": {
      "timeout": 60,
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-text-editor"
      ],
      "_setup": "Install: pip install uv (then uvx runs mcp-text-editor automatically)"
    },
    "sequential-thinking": {
      "timeout": 60,
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "_setup": "Install: npm install -g @modelcontextprotocol/server-sequential-thinking (or use npx for one-time runs)"
    },
    "context7": {
      "type": "http",
      "url": "https://context7.liam.sh/mcp",
      "_setup": "No installation required - remote MCP endpoint for library/code documentation search"
    }
  }
}
